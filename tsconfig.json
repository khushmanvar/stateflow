{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true /* FIXME remove this once vite fixes it */,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "stateflow": [
        "./src/index.ts"
      ],
      "stateflow/*": [
        "./src/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "benchmarks/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}